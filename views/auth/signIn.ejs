<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="/css/stylesheet.css">

<main class="login grid">
    <div class="container">
        <section>
            <div class="loginBox">
                <div class="loginImg">
                    <img src="https://www.pngitem.com/pimgs/m/581-5813504_avatar-dummy-png-transparent-png.png"
                        class="img-fluid" alt="">

                </div>
                <h4 class="">Welcome to CompanyName</h4>
                <form action="" method="post">
                    <input type="text" class="form-control" name="username" required placeholder="Username">
                    <br>
                    <input type="password" class="form-control" name="password" required placeholder="******">
                    <hr>
                    <%if(msg){%>
                    <span class="alert alert-warning text-capitalize" style="display:block"><%=msg%></span>
                    <%}%>
                    <button class="btn btn-primary btn-block" type="submit">Login</button><br>
                    <a href="">forgot password ?</a>
                </form>

            </div>
        </section>

    </div>
</main>