<%-include('../../includes/header.ejs') %>


<main>
    <div class="container">
        <section>
            <h1><%=pageTitle%> Student</h1>
            <hr>
            <div class="card">
                <div class="card-body">
                    <form action="" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="">name</label>
                                <input type="text" class="form-control" value="<%=data.name%>" name="name"
                                    placeholder="Jhon">
                            </div>
                            <div class="col-md-4">
                                <label for="">father name</label>
                                <input type="text" class="form-control" value="<%=data.fatherName%>" name="fatherName"
                                    placeholder="smith">
                            </div>
                            <div class="col-md-4">
                                <label for="">date of birth</label>
                                <input type="date" name="dateOfBirth"
                                    value="<%=moment(data.dateOfBirth).format('YYYY-MM-DD')%>" class="form-control">
                            </div>
                            <div class="col-md-4">
                                <label for="">email</label>
                                <input type="email" class="form-control" name="email" value="<%=data.email%>"
                                    placeholder="Jhon@xyz.com">
                            </div>
                            <div class="col-md-4">
                                <label for="">contact</label>
                                <input type="text" class="form-control" name="contact" value="<%=data.contact%>"
                                    placeholder="+91 95844 54321">
                            </div>
                            <div class="col-md-4">
                                <label for="">alternative contact</label>
                                <input type="text" class="form-control" value="<%=data.alterContact%>"
                                    name="alterContact" placeholder="+91 95844 54321">
                            </div>
                            <div class="col-md-4">
                                <label for="">Address</label>
                                <input type="text" class="form-control" name="address" value="<%=data.address%>"
                                    placeholder="jagraon">
                            </div>
                            <div class="col-md-4">
                                <label for="">Enrolled in</label>
                                <select name="enroll" id="" class="form-control">
                                    <option value="">select course</option>
                                    <%for(let c of courses){%>
                                    <option <%=(data.enrollIn?.toString()===c._id.toString())?'selected':''%>
                                        class="text-capitalize" value="<%=c._id%>"><%=c.name%></option>
                                    <%}%>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="">Teacher</label>
                                <select name="teacher" id="" class="form-control">
                                    <option value="">select teacher</option>
                                    <%for(let t of teachers){%>
                                    <option <%=(data.teacher?.toString()===t._id.toString())?'selected':''%>
                                        class="text-capitalize" value="<%=t._id%>"><%=t.name%></option>
                                    <%}%>
                                 
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="uploader">
                                <div class="studentImg">
                                    <img id="imgView" src="<%=data.image%>"
                                    class="img-fluid rounded-circle" alt="">

                            </div>

                            <div>
                                <label for="">student image</label>
                                <input type="file" name="img" id="img"
                                    onchange="document.getElementById('imgView').src = window.URL.createObjectURL(this.files[0])"
                                    class="form-control">

                            </div>
                        </div>
                </div>
                <hr>

                <%if(msg){%>
                <span class="alert alert-danger text-capitalize" style="display:block"><%=msg%></span>
                <%}%>
                        <a href="/student/" class="btn btn-dark float-left">Cancel</a>
                        <button type="submit" class="btn btn-success text-capitalize float-right"><%=pageTitle%>
                student</button>
                </form>
            </div>
    </div>
    </section>
    </div>

</main>
<%-include('../../includes/footer.ejs') %>